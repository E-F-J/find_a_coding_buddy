<div class="box-tagline">
    <div class="taglines mt-3 pt-3">
      <h3>Find buddies to collaborate with:</h3>
    </div>
</div>

<div class="container">

  <div class="buddies mt-3 mb-3">
      <% @users.each do |user| %>

        <div class="buddies-list">
          <div class="avatar-bordered"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path user.photo.key, crop: :scale, gravity: :face; %>')">
          </div>

          <div>
            <p class="larger-text"><%= user.first_name %> <%= user.last_name %> </p>
            <p class="grey-text"><%= link_to user.first_name, user_path(user) %> </p>
          </div>

        </div>
      <% end %>
  </div>

    <div class="d-flex justify-content-center">
      <%= link_to "Find buddies", users_path, class: "btn btn-primary" %>
    </div>

</div>

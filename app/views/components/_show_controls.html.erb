<div>
  <% if user_signed_in? && current_user.id == @project.user.id %>
    <%= link_to edit_project_path(@project.id), class: "btn btn-primary edit-project-button" do %>
       <i class="fas fa-pen" aria-hidden="true" id="pen-icon"></i> Edit
    <% end %>
    <%= link_to toggle_status_project_path(@project), method: :patch, class: "btn btn-primary update-status-button" do %>
       <i class="fa fa-wrench" aria-hidden="true"></i> Update status
    <% end %>
    <%= link_to project_path(@project.id),  class:"btn btn-danger", method: :delete, data: {confirm:"Are you sure you want to delete your offered project?"} do %>
       <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Delete
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col">
    <h5 class="related-projects-header project-reviews-header">Project reviews</h5>
    <% if @project.reviews.count == 0 %>
      <p>Be the first to
        <%= link_to 'review this project', new_project_review_path(@project) %>
      </p>
    <% else %>
      <%= render 'components/render_reviews' %>
      <%= link_to 'Leave a review', new_project_review_path(@project), class: "review-link" %>
    <% end %>
  </div>
</div>

<div class="box-tagline">
    <div class="taglines">
      <h1>Build</h1>
      <h3>Skills - Projects - Buddies</h3>
    </div>
</div>

<div class="container">

  <div class="projects-list">
      <% @projects.each do |project| %>
        <div class="projects">
          <div class="project-title">
            <p class="larger-text"><%= project.id %> : <%= link_to project.title, project_path(project) %> </p>
            <div class="project-details">
              <p class="grey-text"><%= link_to project.user.first_name, user_path(project.user) %> </p>
                <% project.technologies.each do |technology| %>
                  <p> <%= technology.name %> </p>
                <% end %>
            </div>
          </div>
          <div class="project-description">
            <p><%= project.description %></p>
          </div>
        </div>
      <% end %>
  </div>


  <div class="projects-list">
    <% @projects.each do |project| %>
      <div class="projects">
        <div class="glide">
          <div class="glide__track" data-glide-el="track">
            <ul class="glide__slides">
              <li class="glide__slide"><%= project.id %> : <%= link_to project.title, project_path(project) %></li>
              <li class="glide__slide"><%= project.id %> : <%= link_to project.title, project_path(project) %></li>
              <li class="glide__slide"><%= project.id %> : <%= link_to project.title, project_path(project) %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
    <div class="glide__arrows" data-glide-el="controls">
      <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
      <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
    </div>
    <div data-glide-el="controls">
      <button data-glide-dir="<<">Start</button>
      <button data-glide-dir=">>">End</button>
    </div>
  </div>

    <div class="d-flex justify-content-center">
      <%= link_to "Projects", projects_path, class: "btn btn-primary" %>
    </div>
</div>


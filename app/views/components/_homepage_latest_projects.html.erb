<div class="box-tagline">
    <div class="taglines p-1">
      <h3>Build</h3>
      <h4>Skills - Projects</h4>
    </div>
</div>

<h3 class="sections-title">Latest Projects:</h3>

<div class="container">
  <div class="slider-container">
      <ul class="controls" id="customize-controls" aria-label="Carousel Navigation" tabindex="0">
          <li class="prev" data-controls="prev" aria-controls="customize" tabindex="-1">
              <i class="fas fa-angle-double-left fa-2x"></i>
          </li>
          <li class="next" data-controls="next" aria-controls="customize" tabindex="-1">
              <i class="fas fa-angle-double-right fa-2x"></i>
          </li>
      </ul>

        <div class="my-slider">
          <% @projects.each do |project| %>
            <div class="projects">

              <div class="icon">
                <% project.technologies.each do |technology| %>
                  <%= image_tag "technologies_icons/#{technology.name.downcase}.svg" %>
                <% end %>
              </div>

              <div>
                <p class="larger-text"> <%= link_to project.title, project_path(project) %> </p>
              </div>

            </div>
          <% end %>
      </ul>
  </div>

    <div class="d-flex justify-content-center mt-3">
      <%= link_to "See all projects", projects_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

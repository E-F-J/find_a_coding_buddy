<h4>Search</h4>
<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search your buddy"
  %>
  <%= submit_tag "Search", class: "btn btn-primary mt-3" %>
  <%= link_to "Reset", users_path, class: "btn btn-outline-primary mt-3" %>
<% end %>

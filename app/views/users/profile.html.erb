<div class="container">
  <h1><%= current_user.first_name  %>'s Dashboard</h1>

  <h3>Your offered projects:</h3>
  <% @projects.each do |project| %>
     <p> <%= link_to project.title, project_path(project.id) %> </p>
     <p> <%= link_to "accept", accept_path(id: project.applications.last), method: :post %> </p>
  <% end %>


  <h3>Projects you have joined:</h3>
    <% current_user.applications.each do |application| %>
      <p> <%= link_to application.project.title, project_path(application.project.id) %> </p>
      <p> Led by: <%= application.project.user.first_name %> </p>
      <p> Accepted: <%= application.status %> </p>
    <% end %>
</div>

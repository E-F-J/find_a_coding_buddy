<div class="container">
    <h1>Find buddies</h1>
    <p>path is : users_path </p>
<%= render 'components/user_search' %>

<% @users.each do |user| %>
    <div class="projects-list">
        <p class="mt-3"><strong>
            <%= link_to "#{user.first_name}  #{user.last_name}" , user_path(user.id) %>
        </strong></p>
        <p> <%= user.personal_summary %></p>
    </div>
    
    <div class="photo">
      <% if user.photo.attached? %>
        <div class="user-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path user.photo.key, height: 200, width: 200, crop: :fill %>')">
      <% else %>
        <div class="user-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), image_tag('missing-avatar-female-200x200.png')">
      <% end %>
        </div>
    </div>
    <%  end %>
</div>

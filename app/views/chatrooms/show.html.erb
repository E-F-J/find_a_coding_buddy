<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-sm-offset-3">
      <h4 class="chat-header mt-3"><%= @project.title %></h4>
      <p><i class="fa fa-user"></i> Led by: <%= link_to "#{@project.user.first_name.capitalize} #{@project.user.last_name.capitalize}", user_path(@project.user.id) %></p>

        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <div class="message <%= (message.user == current_user) ? "right" : "" %>">
              <div class="message-container mt-1 mb-1" id="message-<%= message.id %>">
                <% if message.user.photo.present? %>
                  <%= image_tag message.user.photo, class: "avatar" %>
                <% else %>
                  <%= image_tag "missing-avatar-female-200x200.png", :width=>40, :height=>40 %>
                <% end %>
                <i class="author">
                  <span><%= message.user.first_name %></span>
                  <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
                </i>
                <div class="message-content"><%= message.content %></div>
              </div>
            </div>
          <% end %>
        </div>

        <div id="create-message">
          <%= simple_form_for [ @project, @chatroom, Message.new], remote: true, html: {autocomplete: "off" }  do |f| %>
            <%= f.text_field :content, label: false, placeholder: "Message others at #{@project.title}", class: "chat-text-field" %>
            <%= f.button :submit, value="Send Message", class: "btn-outline-primary", id: "message-btn" %>
          <% end %>
        </div>

    </div>
  </div>
</div>

<% content_for :after_js do %>
  <script>
    scrollLastMessageIntoView();
  </script>
<% end %>

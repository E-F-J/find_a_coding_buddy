  <div class="navbar navbar-expand-sm navbar-lewagon">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "logo-font-norwester-782842-removebg.png" %>
        <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= link_to '<i class="fas fa-search"></i> Projects'.html_safe, projects_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <%= link_to '<i class="fas fa-plus"></i> Project'.html_safe, new_project_path, class: "nav-link" %>
